<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd ">
<context:annotation-config/>

	<bean id="name" class="com.demo.spring.Name">
		<property name="firstName" value="${first.name}" />
		<property name="lastName" value="${last.name}" />
	</bean>
	<bean id="address" class="com.demo.spring.Address">
		<property name="doorNo" value="123" />
		<property name="city" value="Hyderabad" />
		<property name="pin" value="500097"></property>
	</bean>
	<bean id="emp" class="com.demo.spring.Emp">
		<property name="empId" value="100" />
		<!-- <property name="name" ref="name" />
		<property name="address" ref="address" /> -->
	</bean>
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	<property name="location" value="classpath:values.properties"></property>
	</bean>
</beans>
