<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd ">
	<context:annotation-config />

	<bean id="name" class="com.demo.spring.Name" scope="myscope">
		<property name="firstName" value="Shantanu" />
		<property name="lastName" value="Banerjee" />
	</bean>
	<bean id="myscopeBean" class="com.demo.spring.MyCustomScope" />
	<bean class="org.springframework.beans.factory.config.CustomScopeConfigurer">
		<property name="scopes">
			<map>
				<entry key="myscope">
					<ref bean="myscopeBean" />
				</entry>
			</map>
		</property>
	</bean>
</beans>
